<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ФИО кандидата"
            android:text="Ераскин Алексей Николаевич"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvBirthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Дата рождения"
            android:text="1982-01-03" />

        <TextView
            android:id="@+id/tvSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Пол"
            android:text="Мужчина" />
        
        <TextView
            android:id="@+id/tvPositionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Должность"
            android:text="Разработчик" />
        
        <TextView
            android:id="@+id/tvSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Заработная плата рублей"
            android:text="100000" />
        
		<TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="Номер телефона"
            android:text="+79263941081" />
        
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:textColor="#000000"
            android:hint="Электронная почта"
            android:text="levrun1@gmail.com" />
        
        <EditText
            android:id="@+id/edResponse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="Письмо соискателю"
            android:inputType="textMultiLine"
            android:minLines="5" >
        </EditText>

        <Button
            android:id="@+id/btnSendResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отправить ответ" />
    </LinearLayout>

</ScrollView>